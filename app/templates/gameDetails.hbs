<h2 class="headerText">{{game.name}}</h2>
<table style="width: 100%; margin-bottom: 2%;">
    <tr>
        <td bgcolor="#ff9900" colspan="20"></td>
    </tr>
</table>
<table style="margin-left: 5%;" colspan="2">
    <tr>
        <td style="white-space: nowrap; width: fit-content;"><img width="500" height="500" src="{{game.image_url}}"/></td>
        <td>
            <table class="gameDetailsTable">
                <tr>
                    <td>Year published: {{game.year_published}}</td>
                </tr>
                <tr>
                    <td>Min Players: {{game.min_players}}</td>
                </tr>
                <tr>
                    <td>Players: {{game.max_players}}</td>
                </tr>
                <tr>
                    <td>Min Playtime: {{game.min_playtime}}</td>
                </tr>
                <tr>
                    <td>Max Playtime: {{game.max_playtime}}</td>
                </tr>
                <tr>
                    <td>Min age: {{game.min_age}}</td>
                </tr>
        </table>
        </td>
        <td>
            <button id="buttonAddToGroup" class="buttonStyle" href="#addGameToGroup/{{game.id}}">ADD TO GROUP</button>
        </td>
    </tr>
</table>
<table class="DescriptionBox">
    <tr>
        <td>{{{game.description}}}</td>
    </tr>
</table>