<table align="center">
    {{#if groups}}
    <tr>
        <td class="TableNameStyle">Name</td>
        <td class="TableNameStyle">Num of Games</td>
    </tr>
    {{#each groups}}
        <tr>
            <td class="TableDataStyle"> <a style="color: aliceblue;" href="#groupDetails/{{id}}">{{name}}</a></td>
            <td class="TableDataStyle">{{games.length}}</td>
        </tr>
    {{/each}}
    {{else}}
    <tr>
        <td><h3 class="header3Text">No groups available</h3></td>
    </tr>
    {{/if}}
</table>

<table align="center">
    <tr>
        <td>
            <button style="margin-left: 5%; margin-top: 3%;" id="buttonCreateGroup" class="buttonStyle">CREATE GROUP</button>
        </td>
    </tr>
</table>